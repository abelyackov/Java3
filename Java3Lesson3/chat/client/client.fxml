<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112-ea" fx:controller="ru.geekbrains.chat.client.Controller">
    <HBox fx:id="startPanel">
        <Button onAction="#regPanel" text="Зарегистрироваться" />
        <Button onAction="#upperPanel" text="Войти" />
    </HBox>
    <HBox fx:id="regPanel">
        <TextField fx:id="regLoginField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="regPasswordField" onAction="#tryToReg" promptText="Пароль" />
        <TextField fx:id="regNickField" promptText="Ник" HBox.hgrow="ALWAYS" />
        <Button onAction="#tryToReg" text="Зарегистрироваться" />
    </HBox>
    <HBox fx:id="upperPanel">
        <TextField fx:id="loginField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="Пароль" />
        <Button onAction="#tryToAuth" text="Авторизоваться" />
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS" />
            <HBox fx:id="bottomPanel" managed="false" visible="false">
                <TextField fx:id="msgField" onAction="#sendMsg" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
                <Button onAction="#sendMsg" text="Отправить" />
            </HBox>
        </VBox>
        <ListView fx:id="clientsList" onMouseClicked="#selectClient" prefWidth="200" />
    </HBox>


</VBox>
